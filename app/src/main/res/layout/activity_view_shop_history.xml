<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop.MainActivityShop"
    android:background="#FF9800">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_shophistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <fragment
        android:id="@+id/shopHistoryFragment"
        android:name="android.example.pitlaneuser.User.ShopHistoryFragment"
        android:layout_width="407dp"
        android:layout_height="626dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_home_shopHistory"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:text="HOME"
        app:backgroundTint="#0D47A1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopHistoryFragment" />

    <Button
        android:id="@+id/btn_history_shopHistory"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="History"
        app:backgroundTint="#0D47A1"
        app:layout_constraintEnd_toStartOf="@+id/btn_setting_shopHistory"
        app:layout_constraintStart_toEndOf="@+id/btn_home_shopHistory"
        app:layout_constraintTop_toBottomOf="@+id/shopHistoryFragment" />

    <Button
        android:id="@+id/btn_setting_shopHistory"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Setting"
        app:backgroundTint="#0D47A1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopHistoryFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>